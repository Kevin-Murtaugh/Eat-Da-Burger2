<h1>Burgers</h1>

<h2>Burgers that are available!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<style>
.form-group {width:300px}
</style>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-groupnew">
    <style = centered>
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="0" checked> Not Devoured.<br>
    <input type="radio" name="devoured" value="1">
  </div>

  <button type="submit">Add Burger</button>
  </style>
</form>
